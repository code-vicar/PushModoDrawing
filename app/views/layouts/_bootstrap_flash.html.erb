<% if flash.count > 0 %>
  <div class="row">
    <% flash.each do |name, msg| %>
      <div class="alert alert-<%= name == :notice ? "success" : "danger" %> alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= msg %>
      </div>
    <% end %>
  </div>
<% end %>